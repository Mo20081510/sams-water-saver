  <div class="container">
    <div class="logo">💧</div>
    <h1>Smart Aque Management System (SAMS)</h1>
    <div class="subtitle">من إعداد: محمد حمدي وأمير رضا – مدرسة المتفوقين للعلوم والتكنولوجيا (STEM)</div>
    
    <div class="metric">
      الاستهلاك اليومي: <span id="consumption">--</span> لتر
    </div>

    <div id="alertBox" class="alert">
      ⚠️ تنبيه: استهلاكك تجاوز الحد اليومي (20.5 لتر)!
    </div>

    <div class="impact" id="impactBox">
      <!-- سيتم ملؤه تلقائيًا -->
    </div>

    <div class="footer">
      مشروع يهدف إلى تقليل هدر المياه بنسبة 34% وتحسين جودة المياه بنسبة 90%
    </div>
  </div>

  <script>
    // === الإعدادات من بحثك ===
    const DAILY_LIMIT = 20.5; // 4.1 لتر × 5 مرات = 20.5 لتر/يوم

    function updateDisplay(liters) {
      document.getElementById('consumption').textContent = liters.toFixed(1);

      // حساب التأثير
      const trees = Math.floor(liters / 50); // كل 50 لتر = شجرة
      const electricity = (liters * 0.24 / 1000).toFixed(2); // من بحثك

      document.getElementById('impactBox').innerHTML = `
        🌱 وفرت ما يكفي لري <strong>${trees || "0"}</strong> شجرة!<br>
        ⚡ وفرت <strong>${electricity}</strong> كيلو واط/ساعة من الكهرباء!
      `;

      // عرض/إخفاء الإنذار
      if (liters > DAILY_LIMIT) {
        document.getElementById('alertBox').style.display = 'block';
      } else {
        document.getElementById('alertBox').style.display = 'none';
      }
    }

    // === محاكاة ذكية (تُظهر قيمًا واقعية من بحثك) ===
    function simulateData() {
      // من بحثك: تقليدي = 6.2 لتر/استخدام، ذكي = 4.1
      const min = 4.1 * 5; // 20.5
      const max = 6.2 * 5; // 31
      const liters = min + Math.random() * (max - min);
      updateDisplay(liters);
    }

    // ابدأ وحدّث كل 5 ثوانٍ
    simulateData();
    setInterval(simulateData, 5000);
  </script>
